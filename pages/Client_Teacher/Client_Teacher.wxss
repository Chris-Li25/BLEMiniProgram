page {
  color: #333;
}



.devices_summary {
  display: inline-block;
  margin-top: 10rpx;
  padding: 10px;
  font-size: 16px;
}

.device_list {
  height: 300px;
  margin: 50px 5px;
  margin-top: 0;
  border: 1px solid #EEE;
  border-radius: 5px;
  width: auto;
}

.device_item {
  border-bottom: 1px solid #EEE;
  padding: 10px;
  color: #666;
}

.device_item_hover {
  background-color: rgba(0, 0, 0, .1);
}

.connected_info {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #F0F0F0;
  padding: 10px;
  padding-bottom: 20px;
  margin-bottom: env(safe-area-inset-bottom);
  font-size: 14px;
  min-height: 100px;
  box-shadow: 0px 0px 3px 0px;
}

.connected_info .operation {
  position: absolute;
  display: inline-block;
  right: 30px;
}

.inputArea {
  display: inline-flex;
  width: 50%;
  border: 1rpx solid black;
  height: 60rpx;
  font-size: 35rpx;
  font-family: Arial, Helvetica, sans-serif;
}

.InputText {
  display: inline-block;
  line-height: 60rpx;
}

.inputView {
  display: flex;
  justify-content: center;
}

.functionBtn{
  width: auto !important;
}

.functionBtnArea{
  display: flex;
  justify-content: space-between;
  margin: 20rpx 30rpx;
}

.devicesInfo{
  display: flex;
  justify-content: left;
}

.studentId{
  font-family: "Times New Roman";
  font-size: 18px;
}
