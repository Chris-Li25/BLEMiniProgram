/* pages/Server/Server.wxss */
.inputArea {
  float: left;
  width: 50%;
  border: 1rpx solid black;
  height: 60rpx;
  font-size: 35rpx;
  font-family: Arial, Helvetica, sans-serif;
}

.inputText{
  float: left;
  line-height: 60rpx;
}

.inputAreaView{
  margin: 15px 0;
  display: flex;
  justify-content: center;
}

.device_list {
  height: 700rpx;
  margin: 20rpx 20rpx;
  border: 1px solid #EEE;
  border-radius: 5rpx;
  width: auto;
}

.btnArea{
  display: flex;
  justify-content: center;
  margin: 0 30rpx;
}

.functionBtn{
  width: auto !important;
  display: flex;
}

.devicesNumberArea{
  display: flex;
  margin: 20rpx;
}

.tip{
  margin-top: -20rpx;
  display: flex;
  justify-content: center;
  text-align: center;
}

